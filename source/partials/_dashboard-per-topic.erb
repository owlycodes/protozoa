<div class="tab-pane" id="dashboard-per-topic">
  <div class="row">
    <div class="col-md-12">
      <% data.subjects.each do |subject| %>
        <table class="table table-condensed">
          <thead>
            <tr>
              <td><h3 class='topic'><%= subject.name %></h3></td>
              <td><p>Score</p></td>
              <td><p>Progress</p></td>
            </tr>
          </thead>
          <tbody>
            <% subject.topics.each do |t|  %>
              <tr>
                <td><%= t.name %> </td>
                <% r = Random.new
                a = r.rand(0..2)
              %>
                <% case a
                  when 0 %>
                  <td>0/0  </td>
                  <td><span class="label label-default">None</span></td>
                <% when 1 %>
                  <td>10/10</td>
                  <td><span class="label  label-success">Perfect</span></td>
                <% when 2 %>
                  <td>3/6</td>
                  <td><span class="label label-info">Okay</span></td>
                <% end  %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>